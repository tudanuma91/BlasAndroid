<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="model"
            type="com.v3.basis.blas.ui.common.ServerSyncModel" />
        <variable
            name="vm"
            type="com.v3.basis.blas.ui.common.ServerSyncViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="@{model.syncVisible ? View.VISIBLE : View.GONE}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="@{model.progress ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorText"
            android:text="@{model.status}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/progress"
            app:layout_constraintBottom_toBottomOf="@id/progress"
            tools:text="サーバーに登録中です" />

        <Button
            android:id="@+id/syncButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:enabled="@{model.syncEnable}"
            android:onClick="@{v -> vm.clickSyncToServer(model)}"
            android:text="サーバーに登録"
            android:visibility="@{model.syncEnable ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress" />

        <!--
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:onClick="@{v -> vm.clickCancel(model)}"
            app:layout_constraintTop_toBottomOf="@id/progress"
            app:layout_constraintStart_toEndOf="@id/syncButton"
            android:text="取り消し"
            />
            -->

        <FrameLayout
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorText"
            app:layout_constraintTop_toBottomOf="@id/syncButton"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/errMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:text="@{model.errorMessage}"
            android:textColor="#E91E63"
            app:layout_constraintBottom_toTopOf="@+id/syncButton"
            app:layout_constraintStart_toEndOf="@+id/progress"
            app:layout_constraintTop_toBottomOf="@+id/status"
            tools:text="" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
